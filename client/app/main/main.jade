.container(ng-controller='ChampionlistCtrl')
  .row
    .col-lg-12
      h1.page-header Champions:
        table.table
          tr(ng-repeat='champion in champions')
            td
              img(ng-src="http://ddragon.leagueoflegends.com/cdn/5.2.1/img/champion/{{champion.id}}.png")
            td
              {{champion.name}}
              
        table.table(ng-controller='ItemlistCtrl')
          tr(ng-repeat='item in items')
            td
              img(ng-src="http://ddragon.leagueoflegends.com/cdn/5.2.1/img/item/{{item.id}}.png")
            td
              {{item.name}}
              
